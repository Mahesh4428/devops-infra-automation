pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-creds')
        AWS_SECRET_ACCESS_KEY = credentials('aws-creds')
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Mahesh4428/devops-infra-automation.git', branch: 'master'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Ansible - Jenkins Setup') {
            steps {
                sh 'ansible-playbook -i ansible/hosts.cfg ansible/jenkins.yml'
            }
        }

        stage('Ansible - K8s Setup') {
            steps {
                sh 'ansible-playbook -i ansible/hosts.cfg ansible/k8s.yml'
            }
        }
    }
}

